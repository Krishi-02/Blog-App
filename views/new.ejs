<%- include("partials/header")%>

<div class="ui main text container segment">
	<div class="ui head header">New Blog</div>
	<form action="/blogs" method="POST" class="ui form">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="blog title">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="image url">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" required></textarea>
		</div>
		<button type="submit" class="ui black basic button big">Submit</button>
	</form>
</div>

<%- include("partials/footer")%>